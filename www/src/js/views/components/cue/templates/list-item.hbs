<a class="item">
  <div class="name" data-toggle="tooltip" data-placement="top" title="{{Name}}">{{Name}}</div>
  <div class="controls">
    <div class="btn-group">
      <button type="button" class="delete-cue btn btn-default btn-xs">
        <span><i class="fa fa-trash"></i></span>
      </button>
      <button type="button" class="edit-cue btn btn-default btn-xs">
        <span><i class="fa fa-cog"></i></span>
      </button>
      <button type="button" class="edit-values btn btn-default btn-xs">
        <span><i class="fa fa-list"></i></span>
      </button>
    </div>
    <div class="btn-group pull-right">
      <button type="button" class="play-cue btn btn-default btn-xs">
        <span><i class="fa fa-play"></i></span>
      </button>
    </div>
    <div class="clearfix"></div>
  </div>
</a>

<a class="well well-sm delete-dialog">
  <div>Really?</div>
  <div class="btn-group">
    <button type="button" class="abort btn btn-default btn-xs">
      Cancel
    </button>
    <button type="button" class="destroy-cue btn btn-danger btn-xs">
      Delete
    </button>
  </div>
  <div class="clearfix"></div>
</a>
