     InternalFB = 0,
     UnknownCommandFB = 1,
     MalformedRequestFB = 2
}

table ApiErrorFB {
     Type: ApiErrorTypeFB;
     Data: string;
}

enum ServerApiCommandFB:ushort {
     RegisterFB = 0,
     UnReqisterFB,
     AddPinFB,
     UpdatePinFB,
     RemovePinFB,
     AddCueFB,
     UpdateCueFB,
     RemoveCueFB,
     AddCueListFB,
