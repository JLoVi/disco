enum BehaviorFB:ushort {
     ToggleFB = 0,
     BangFB = 1 
}

enum StringTypeFB:ushort {
     SimpleFB = 0,
     MultiLineFB = 1,
     FileNameFB = 2,
     DirectoryFB = 3,
     UrlFB = 4,
     IPFB = 5
}

table StringSliceFB {
      Index: ulong;
      Value: string;
}

table IntSliceFB {
      Index: ulong;
      Value: int;
}

table FloatSliceFB {
      Index: ulong;
      Value: float;
}

table DoubleSliceFB {
      Index: ulong;
      Value: double;
}

table BoolSliceFB {
      Index: ulong;
      Value: bool;
}

table ByteSliceFB {
      Index: ulong;
      Value: [ubyte]; 
}

table EnumPropertyFB {
      Key: string;
      Value: string;
}

table EnumSliceFB {
      Index: ulong;
      Value: EnumPropertyFB;
}

table RGBAValueFB {
     Red:   ubyte;
     Green: ubyte;
     Blue:  ubyte;
     Alpha: ubyte;
}

table HSLAValueFB {
     Hue: ubyte;
     Saturation: ubyte;
     Lightness: ubyte;
     Alpha: ubyte;
}

union ColorSpaceTypeFB {
      RGBAValueFB,
      HSLAValueFB
}

table ColorSpaceFB {
      Value: ColorSpaceTypeFB;
}

table ColorSliceFB {
      Index: ulong;
      Value: ColorSpaceFB;
}

table CompoundSliceFB {
      Index: ulong;
      Value: [IOBoxFB];
}

union SliceTypeFB {
      StringSliceFB,
      IntSliceFB,
      FloatSliceFB,
      DoubleSliceFB,
      BoolSliceFB,
      ByteSliceFB,
      EnumSliceFB,
      ColorSliceFB,
      CompoundSliceFB
}

table SliceFB {
      Slice: SliceTypeFB;
}

