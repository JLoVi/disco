table VoteRequestFB {
      Term         : uint;
      Candidate    : RaftMemberFB;
      LastLogIndex : uint;
      LastLogTerm  : uint;
}

table VoteResponseFB {
      Term    : uint;
      Granted : bool;
      Reason  : ErrorFB;
}

