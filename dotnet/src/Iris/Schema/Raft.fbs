//         |_|   |_|

table AppendEntriesFB {
      Term         : int;
      PrevLogIdx   : int;
      PrevLogTerm  : int;
      LeaderCommit : int;
      Entries      : [ LogFB ];
}

table AppendResponseFB {
      Term         : int;
      Success      : bool;
      CurrentIndex : int;
      FirstIndex   : int;
}

