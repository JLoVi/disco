enum ConfigChangeTypeFB: ushort {
     NodeAdded = 0,
     NodeRemoved = 1
}

table ConfigChangeFB {
      Type: ConfigChangeTypeFB;
      Node: NodeFB;
}

//  _
// | |    ___   __ _
// | |   / _ \ / _` |
