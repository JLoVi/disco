      Term         : ulong;
      Candidate    : NodeFB;
      LastLogIndex : ulong;
      LastLogTerm  : ulong;
}

table VoteResponseFB {
      Term    : ulong;
      Granted : bool;
      Reason  : RaftErrorFB;
}

