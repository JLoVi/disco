enum ConfigChangeTypeFB: ushort {
     MemberAdded = 0,
     MemberRemoved = 1
}

table ConfigChangeFB {
      Type: ConfigChangeTypeFB;
      Member: RaftMemberFB;
}

//  _
// | |    ___   __ _
// | |   / _ \ / _` |
// | |__| (_) | (_| |
// |_____\___/ \__, |
//             |___/

table ConfigurationFB {
      Id:    string;
      Index: uint;
      Term : uint;
      Members: [ RaftMemberFB ];
}

table JointConsensusFB {
      Id:      string;
      Index:   uint;
      Term:    uint;
      Changes: [ ConfigChangeFB ];
}

table LogEntryFB {
      Id:    string;
      Index: uint;
      Term:  uint;
      Data:  RaftApiActionFB;
}

table SnapshotFB {
      Id:         string;
      Index:      uint;
      Term:       uint;
      LastIndex:  uint;
      LastTerm:   uint;
      Members:    [ RaftMemberFB ];
      Data:       RaftApiActionFB;
}

union LogTypeFB {
      ConfigurationFB,
      JointConsensusFB,
      LogEntryFB,
      SnapshotFB
}

table LogFB {
      Entry: LogTypeFB;
}

