union RaftPayloadFB {
      CueFB,
      CueListFB,
      PinFB,
      PatchFB,
      RaftMemberFB,
      UserFB,
      SessionFB,
      LogEventFB,
      StringFB,
      StateFB,
      ProjectFB
}

enum RaftActionTypeFB:ushort {
      AddFB,
      UpdateFB,
      RemoveFB,
      LogEventFB,
      DataSnapshotFB,
      UndoFB,
      RedoFB,
      ResetFB,
      SaveProjectFB,
      SetLogLevelFB,
}

table RaftApiActionFB {
      Action: RaftActionTypeFB;
      Payload: RaftPayloadFB;
}

