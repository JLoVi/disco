table VoteRequestFB {
      Term         : int;
      Candidate    : RaftMemberFB;
      LastLogIndex : int;
      LastLogTerm  : int;
}

table VoteResponseFB {
      Term    : int;
      Granted : bool;
      Reason  : ErrorFB;
}

//     _                               _ _____       _        _
