enum NodeStateFB:ubyte {
     JoiningFB = 0,
     RunningFB = 1,
     FailedFB  = 2
}

table NodeFB {
      Id         : string;
      Data       : IrisNodeFB;
      Voting     : bool;
      VotedForMe : bool;
      State      : NodeStateFB;
      NextIndex  : ulong;
      MatchIndex : ulong;
}

