enum ConfigChangeTypeFB: ushort {
     MemberAdded = 0,
     MemberRemoved = 1
}

table ConfigChangeFB {
      Type: ConfigChangeTypeFB;
      Member: RaftMemberFB;
}

//  _
// | |    ___   __ _
// | |   / _ \ / _` |
// | |__| (_) | (_| |
// |_____\___/ \__, |
//             |___/

table ConfigurationFB {
      Id:    [ubyte];
      Index: int;
      Term : int;
      Members: [ RaftMemberFB ];
}

table JointConsensusFB {
      Id:      [ubyte];
      Index:   int;
      Term:    int;
      Changes: [ ConfigChangeFB ];
}

table LogEntryFB {
      Id:    [ubyte];
      Index: int;
      Term:  int;
      Data:  StateMachineFB;
}

table SnapshotFB {
      Id:         [ubyte];
      Index:      int;
      Term:       int;
      LastIndex:  int;
      LastTerm:   int;
      Members:    [ RaftMemberFB ];
      Data:       StateMachineFB;
}

union LogTypeFB {
      ConfigurationFB,
      JointConsensusFB,
      LogEntryFB,
      SnapshotFB
}

table LogFB {
      Entry: LogTypeFB;
}

