enum RaftErrorTypeFB:ushort {
     AlreadyVotedFB,
     AppendEntryFailedFB,
     CandidateUnknownFB,
     EntryInvalidatedFB,
     InvalidCurrentIndexFB,
     InvalidLastLogFB,
     InvalidLastLogTermFB,
     InvalidTermFB,
     LogFormatErrorFB,
     LogIncompleteFB,
     NoErrorFB,
     NoNodeFB,
     NotCandidateFB,
     NotLeaderFB,
     NotVotingStateFB,
     ResponseTimeoutFB,
     SnapshotFormatErrorFB,
     StaleResponseFB,
     UnexpectedVotingChangeFB,
     VoteTermMismatchFB,
     OtherErrorFB
}

