// |_____\___/ \__, |
//             |___/

table ConfigurationFB {
      Id:    string;
      Index: ulong;
      Term : ulong;
      Nodes: [ NodeFB ];
}

table JointConsensusFB {
      Id:      string;
      Index:   ulong;
      Term:    ulong;
      Changes: [ ConfigChangeFB ];
}

table LogEntryFB {
      Id:    string;
      Index: ulong;
      Term:  ulong;
      Data:  StateMachineFB;
}

table SnapshotFB {
      Id:         string;
      Index:      ulong;
      Term:       ulong;
      LastIndex:  ulong;
      LastTerm:   ulong;
      Nodes:      [ NodeFB ];
      Data:       StateMachineFB;
}

union LogTypeFB {
      ConfigurationFB,
      JointConsensusFB,
      LogEntryFB,
      SnapshotFB
}

table LogFB {
      Entry: LogTypeFB;
}

