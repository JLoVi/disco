table StringBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      StringType : StringTypeFB;
      FileMask   : string;
      MaxChars   : int;
      Slices     : [StringSliceFB];
}

table IntBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      VecSize    : uint;
      Min        : int;
      Max        : int;
      Unit       : string;
      Slices     : [IntSliceFB];
}

table FloatBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      VecSize    : uint;
      Min        : int;
      Max        : int;
      Unit       : string;
      Precision  : uint;
      Slices     : [FloatSliceFB];
}

table DoubleBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      VecSize    : uint;
      Min        : int;
      Max        : int;
      Unit       : string;
      Precision  : uint;
      Slices     : [DoubleSliceFB];
}

table BoolBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      Behavior   : BehaviorFB;
      Slices     : [BoolSliceFB];
}

table ByteBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      Slices     : [ByteSliceFB];
}

table EnumBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      Properties : [EnumPropertyFB];
      Slices     : [EnumSliceFB];
}

table ColorBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      Slices     : [ColorSliceFB];
}

table CompoundBoxFB {
      Id         : string;
      Name       : string;
      Patch      : string;
      Tags       : [string];
      Slices     : [CompoundSliceFB];
}

union IOBoxTypeFB {
      StringBoxFB,
      IntBoxFB,
      FloatBoxFB,
      DoubleBoxFB,
      BoolBoxFB,
      ByteBoxFB,
      EnumBoxFB,
      ColorBoxFB,
      CompoundBoxFB
}

table IOBoxFB {
