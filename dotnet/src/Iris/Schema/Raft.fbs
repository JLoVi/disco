table AppendEntriesFB {
      Term         : uint;
      PrevLogIdx   : uint;
      PrevLogTerm  : uint;
      LeaderCommit : uint;
      Entries      : [ LogFB ];
}

table AppendResponseFB {
      Term         : uint;
      Success      : bool;
      CurrentIndex : uint;
      FirstIndex   : uint;
}

