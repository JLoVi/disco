      PrevLogIdx   : ulong;
      PrevLogTerm  : ulong;
      LeaderCommit : ulong;
      Entries      : [ LogFB ];
}

table AppendResponseFB {
      Term         : ulong;
      Success      : bool;
      CurrentIndex : ulong;
      FirstIndex   : ulong;
}

