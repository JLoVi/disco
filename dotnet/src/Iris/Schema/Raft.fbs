enum StateMachineTypeFB:ushort {
      OpenProjectTypeFB,
      SaveProjectTypeFB,
      CreateProjectTypeFB,
      CloseProjectTypeFB,
      AddClientTypeFB,
      UpdateClientTypeFB,
      RemoveClientTypeFB,
      DataSnapshotTypeFB
}

table StateMachineFB {
      Type: StateMachineTypeFB;
      Command: string;
}

