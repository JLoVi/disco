table SessionFB {
      Id:        string;
      IpAddress: string;
      UserAgent: string;
}

//  ____        __ _   __  __                _
// |  _ \ __ _ / _| |_|  \/  | ___ _ __ ___ | |__   ___ _ __
// | |_) / _` | |_| __| |\/| |/ _ \ '_ ` _ \| '_ \ / _ \ '__|
