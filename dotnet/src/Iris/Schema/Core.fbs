table StateFB {
      Project:  ProjectFB;
      Patches:  [PatchFB];
      Cues:     [CueFB];
      CueLists: [CueListFB];
      Sessions: [SessionFB];
      Users:    [UserFB];
      Clients:  [IrisClientFB];
}

